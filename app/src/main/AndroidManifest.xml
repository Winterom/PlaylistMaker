<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PlayListMakerApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:targetApi="31">
        <activity
            android:screenOrientation="portrait"
            android:name=".presentation.playeractivity.PlayerActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".presentation.searchactivity.SearchActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".presentation.mediaactivity.MediaLibraryActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".presentation.settingactivity.SettingsActivity"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".presentation.mainactivity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>