<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="common_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/dimen16dp</item>
        <item name="android:paddingRight">@dimen/dimen16dp</item>
        <item name="android:paddingTop">@dimen/dimen16dp</item>
    </style>
    <style name="common_ll.mainActivity">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="common_ll.settingsActivity">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="header">
        <item name="android:textSize">@dimen/dimen22sp</item>
        <item name="android:lineHeight">@dimen/dimen26sp</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
    </style>
    <style name="header.MainActivity">
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="header.settingsActivity">
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="button_main_activity">
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">@dimen/dimen16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textSize">@dimen/dimen22sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="text_view_settings">
        <item name="android:textSize">@dimen/dimen16sp</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="track_item_author">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dimen10sp</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="track_item_name">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dimen16sp</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="app_button">
        <item name="android:textColor">@color/yp_black</item>
    </style>
    <style name="activity_background">
        <item name="android:background">@color/yp_black</item>
    </style>
    <style name="app_black_to_white">
        <item name="android:textColor">@color/yp_white</item>
    </style>
    <style name="TabLayout">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimen14sp</item>
        <item name="tabTextColor">@color/yp_white</item>
        <item name="tabMode">fixed</item>
        <item name="fontWeight">500</item>
        <item name="tabBackground">@color/yp_black</item>
        <item name="tabIndicatorColor">@color/yp_white</item>
    </style>
    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/dimen18sp</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
</resources>