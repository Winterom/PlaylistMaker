<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/common_ll.settingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingTop="16dp">
        <ImageView
            android:id="@+id/return_to_main"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:src="@drawable/return_svg" />
        <TextView
            style="@style/header.settingsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:clickable="true"
            android:text="@string/search" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            style="@style/search_field"
            android:id="@+id/searchField"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search_hint"
            android:imeOptions="actionDone"
            android:paddingStart="36sp"
            android:paddingEnd="40dp"
            android:singleLine="true"
            android:maxLength="255"
            android:importantForAutofill="no" />
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="12dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/search_icon"
            app:tint="@color/yp_text_gray"/>
        <ImageView
            android:id="@+id/clear_text"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="12dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/close"
            app:tint="@color/yp_text_gray"
            android:visibility="visible" />
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:visibility="gone"/>
    <LinearLayout
        android:id="@+id/empty_search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:visibility="visible"
        android:layout_marginTop="102dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/empty_search_result"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:textColor="@color/svgColor"
            android:text="@string/empty_search_result"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/network_not_available"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="102dp"
        android:orientation="vertical"
        tools:visibility="gone">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/internet_not_available"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/ys_display_medium"
            android:layout_marginTop="16dp"
            android:textSize="19sp"
            android:textAlignment="center"
            android:textColor="@color/svgColor"
            android:text="@string/network_not_available_title"/>
        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:backgroundTint="@color/svgColor"
            android:text="@string/update_button_label"
            android:fontFamily="@font/ys_display_medium"
            android:textSize="14sp"
            android:textFontWeight="500"
            android:lineHeight="16.41dp"
            android:textAllCaps="false"
            app:cornerRadius="54dp"/>
    </LinearLayout>
</LinearLayout>