<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_background"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/add_playlist_button"
        style="@style/app_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen36dp"
        android:backgroundTint="@color/svgColor"
        android:fontFamily="@font/ys_display_medium"
        android:insetBottom="0dp"
        android:insetTop="0dp"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="@dimen/dimen52dp"
        android:layout_marginTop="@dimen/dimen24dp"
        tools:visibility="visible" />
    <ImageView
        android:id="@+id/placeholder_no_tracks_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_search_result"
        android:layout_marginTop="@dimen/dimen48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_playlist_button" />

    <TextView
        android:id="@+id/placeholder_no_tracks_text"
        style="@style/TitleTextStyle"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen16dp"
        android:minLines="2"
        android:text="@string/empty_playlists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/placeholder_no_tracks_image" />

</androidx.constraintlayout.widget.ConstraintLayout>