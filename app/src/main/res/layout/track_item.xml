<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_search_track_list"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/artwork_image_view"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="13dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/settings"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="14dp"
        android:layout_marginStart="66dp">
        <TextView
            android:id="@+id/track_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="16sp"
            android:lineHeight="18.75dp"
            android:textColor="@color/yp_black"
            tools:text="Very important news text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="13dp">
            <TextView
                android:id="@+id/artist_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:lineHeight="12.89dp"
                android:textColor="@color/yp_text_gray"
                tools:text="Very important news text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic"/>
            <TextView
                android:id="@+id/track_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ys_display_regular"
                android:textSize="11sp"
                android:lineHeight="12.89dp"
                android:textColor="@color/yp_text_gray"
                tools:text="Track time"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="end|center_vertical"
        android:src="@drawable/right_arrow" />
</FrameLayout>