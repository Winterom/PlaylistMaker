<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="common_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="common_ll.mainActivity">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="common_ll.settingsActivity">
        <item name="android:background">@color/yp_white</item>
    </style>

    <style name="header">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">26sp</item>
        <item name="android:fontFamily">"@font/ys_display_medium"</item>
    </style>

    <style name="header.MainActivity">
        <item name="android:textColor">@color/yp_white</item>
    </style>

    <style name="header.settingsActivity">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="button_main_activity" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="text_view_settings">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="backgroundMainActivity">
        <item name="background">@color/yp_black</item>
    </style>

    <style name="search_field">
        <item name="android:background">@drawable/search_field</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lines">1</item>
    </style>
    <style name="track_item_author">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineHeight">12.89dp</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>
    <style name="track_item_name">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">18.75dp</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>
</resources>